    "version": "0.2.0",
    "configurations": [
        {
            "name": "Xmas - (gdb) debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Windows_64_Debug/Xmas.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/bin",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}